server:
<% if_p("iaas_exporter.web.port") do |port|  %>
  port: <%= port %>
<% end %>
  tomcat:
    remote_ip_header: x-forwarded-for
    protocol_header: x-forwarded-proto
    internal_proxies: 10\.\d{1,3}\.\d{1,3}\.\d{1,3}|192\.168\.\d{1,3}\.\d{1,3}|169\.254\.\d{1,3}\.\d{1,3}|127\.\d{1,3}\.\d{1,3}\.\d{1,3}|172\.1[6-9]{1}\.\d{1,3}\.\d{1,3}|172\.2[0-9]{1}\.\d{1,3}\.\d{1,3}|172\.3[0-1]{1}\.\d{1,3}\.\d{1,3}

management:
  context-path: /admin

spring:
  application:
    name: iaas-exporter

logging:
  level:
    org.springframework.security: DEBUG
    
exporter:
  disk:
    scan:
      delayms: <%= p("iaas_exporter.disk.scan.delayms") %>
  vm:
    scan:
      delayms: <%= p("iaas_exporter.vm.scan.delayms") %>
  proxy_host: <%= p("iaas_exporter.proxy_host") %>
  proxy_port: <%= p("iaas_exporter.proxy_port") %>







<% if_p("iaas_exporter.openstack.endpoint") do |endpoint|  %>
  openstack: 
    endpoint: <%= endpoint %>
    tenant: <%= p("iaas_exporter.openstack.tenant") %>
    username: <%= p("iaas_exporter.openstack.username") %>
    password: <%= p("iaas_exporter.openstack.password") %>
<% end %>    

<% if_p("iaas_exporter.cloudstack.endpoint") do |endpoint|  %>
  cloudstack: 
    endpoint: <%= endpoint %>
    zone: <%= p("iaas_exporter.cloudstack.zone") %>
    api_key: <%= p("iaas_exporter.cloudstack.api_key") %>
    secret_access_key: <%= p("iaas_exporter.cloudstack.secret_access_key") %>
<% end %>    

<% if_p("iaas_exporter.vcloud.endpoint") do |endpoint|  %>
  vcloud: 
    endpoint: <%= endpoint %>
    org: <%= p("iaas_exporter.vcloud.org") %>
    username: <%= p("iaas_exporter.vcloud.username") %>
    password: <%= p("iaas_exporter.vcloud.password") %>
<% end %>    
    

    
    
    
    
    
    